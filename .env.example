# Google Sheets Integration
# Replace this URL with your actual Google Apps Script deployment URL
NEXT_PUBLIC_GOOGLE_SHEETS_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID_HERE/exec

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_auth_domain_here
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_storage_bucket_here
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id_here
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id_here


# Firebase Admin SDK Configuration (for server-side operations)
# You need to get these values from your service account private key JSON file
FIREBASE_PROJECT_ID=cloudinstitution-lms
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@cloudinstitution-lms.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"


# Site Configuration
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# Email Configuration (Choose one option)

# Option 1: Gmail SMTP (Recommended for Development)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-16-character-app-password

# Option 2: Custom SMTP Server (Production)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-username
SMTP_PASSWORD=your-password

# Common SMTP Examples:
# SendGrid: smtp.sendgrid.net:587
# Mailgun: smtp.mailgun.org:587
# Office 365: smtp.office365.com:587
# Yahoo: smtp.mail.yahoo.com:587